---
layout: base
---

<header class="section spot-color-primary">
  <div class="section__inner">
    <div class="wrapper flow region">
      <h1 class="text-center">{{ title }}</h1>
      <p class="text-center">{{ intro }}</p>
    </div>
  </div>
  {% include 'svg/divider-waves.svg' %}
</header>

<article class="region">
  <div class="wrapper flow prose">
    {{ content | safe }}
  </div>
</article>

<article class="region" style="--region-space-top: var(--space-s)">
  <div class="wrapper flow prose">
    <h2>{{ blog.title }}</h2>
    <!-- blog intro text is optional. -->
    {% if blog.intro %}
    <p>{{ blog.intro }}</p>
    {% endif %}
  </div>
  <!-- TODO: duplicate of partials/blog.njk -->

  <ul class="wrapper grid mt-l-xl" role="list" data-rows="masonry" data-layout="50-50">
  {% set postslist = collections.posts %} {% for post in postslist.slice(0,4) %} {%
  include "partials/blog-loop.njk" %} {% endfor %}
  </ul>

  
</article>

<article class="region" style="--region-space-top: var(--space-s)">
<div class="wrapper flow prose">
  <h2>{{ tootfeed.title }}</h2>
  {% if tootfeed.intro %}
  <p>{{ tootfeed.intro }}</p>
  {% endif %}


{% setAsync "tootId_0" %}
{% tootId "mastodon.social", "jonmichaels", 0 %}
{% endsetAsync %}

{% stoot "mastodon.social", tootId_0 %}

{% setAsync "tootId_1" %}
{% tootId "mastodon.social", "jonmichaels", 1 %}
{% endsetAsync %}

{% stoot "mastodon.social", tootId_1 %}

{% setAsync "tootId_2" %}
{% tootId "mastodon.social", "jonmichaels", 2 %}
{% endsetAsync %}

{% stoot "mastodon.social", tootId_2 %}

{% setAsync "tootId_3" %}
{% tootId "mastodon.social", "jonmichaels", 3 %}
{% endsetAsync %}

{% stoot "mastodon.social", tootId_3 %}

</div>
</article>